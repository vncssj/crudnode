<html>

<head>
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>

    <div class="container">
        <div class="jumbotron">
            Edit User
        </div>
        <% for(var i = 0; i < user.length; i++) {%>
        <form action="/edit" method="POST">
            <input type="hidden" name="id" value="<%= user[i]._id %>" />
            <div class="form-group">
                <input class="form-control" value="<%= user[i].nome %>" name="nome" placeholder="Insira seu nome" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].sobrenome %>" name="sobrenome"
                    placeholder="Insira seu sobrenome" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].nascimento %>" name="nascimento"
                    placeholder="Insira seu nascimento" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].email %>" name="email" placeholder="Insira seu email" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].cep %>" name="cep" placeholder="Insira seu cep" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].logradouro %>" name="logradouro"
                    placeholder="Insira seu logradouro" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].cidade %>" name="cidade"
                    placeholder="Insira seu cidade" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].estado %>" name="estado"
                    placeholder="Insira seu estado" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].pais %>" name="pais" placeholder="Insira seu pais" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].complemento %>" name="complemento"
                    placeholder="Insira seu complemento" />
            </div>
            <div class="form-group">
                <input class="form-control" value="<%= user[i].numero %>" name="numero"
                    placeholder="Insira seu numero" />
            </div>
            <input class="btn btn-primary offset-4 col-4" type="submit" value="Salvar" />
        </form>
        <% } %>
    </div>
</body>

</html>