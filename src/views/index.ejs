<%- include('partials/head') %>
<div class="row">
    <div class="col-md-10 offset-1">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Nascimento</th>
                    <th>Email</th>
                    <th>Endere√ßo</th>
                    <th colspan="2">
                        <a href="/add" class="btn btn-light btn-sm"><i class="fas fa-plus"></i> Add Tia</a>
                    </th>
                </tr>
            </thead>
            <% for(var i = 0; i < users.length; i++) {%>
            <tr>
                <td><%= users[i].nome %> <%= users[i].sobrenome %></td>
                <td><%= users[i].nascimento %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].cep %>:
                    <%= users[i].logradouro %>, <%= users[i].numero %>, <%= users[i].complemento %>,
                    <%= users[i].cidade %>
                    - <%= users[i].estado %>, <%= users[i].pais %>
                </td>
                <td>
                    <a class="btn btn-sm btn-light" href="/edit/<%= users[i]._id %>"><i class="far fa-edit"></i></a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" href="/delete/<%= users[i]._id %>"><i
                            class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
</div>
<%- include('partials/footer') %>